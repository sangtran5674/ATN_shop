<div class="side">
    <div class="col-sm-4">
      <h1>Account</h1>
        <table>
            <% for (var i = 0; i < accountlist.length; i++) { %>
            <tr>
                <td>
                    <!-- ten nguoi dung-->
                    <a> <%= accountlist[i].Fullname %></a>
                </td>
                <td>
                    <!-- buton view -->
                    <input type="button" onclick="view(
                        '<%= accountlist[i]._id %>',
                        '<%= accountlist[i].User %>',
                        '<%= accountlist[i].Password %>',
                        '<%= accountlist[i].Permission %>',
                        '<%= accountlist[i].Fullname %>',
                        '<%= accountlist[i].DateOfBirth %>',
                        '<%= accountlist[i].Address %>',
                        '<%= accountlist[i].Sex %>',
                        '<%= accountlist[i].Phone %>',
                        '<%= accountlist[i].Email %>',
                        '<%= accountlist[i].CN_id %>')" value="View">
                </td>
                <td>
                    <!-- buton view -->
                    <button onclick="location.href='/account/delete?user=<%= accountlist[i]._id %>'" type="button"  >Delete</button>
                </td>
                
            </tr>
            <% } %>
        </table>
      <p>This page will display a list of user's account information</p>
      <p>Features required for Page Account</p>
      <p>For Staff:</p>
      <ol>
          <li>Edit user information</li>
      </ol>
      <br><br>

      <p>For Admin: </p>
      <ol>
          <li>Edit user information</li>
          <li>Delete account</li>
          <li>More account</li>
      </ol>
  </div>     
</div>